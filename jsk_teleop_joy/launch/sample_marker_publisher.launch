<launch>
  <arg name="CONTROLLER_TYPE" default="auto" />
  <arg name="DEV" default="/dev/input/js0" />
  <arg name="POSE_REMAP" default="joy_pose" />
  <arg name="FRAME_ID" default="map" />

  <arg name="gui" default="true" />

  <node pkg="joy" type="joy_node" name="joy_driver" output="screen" >
    <param name="dev" type="string" value="$(arg DEV)" />
    <param name="deadzone" value="0.2" />
    <param name="autorepeat_rate" value="40" />
    <param name="coalesce_interval" value="0.025" />
  </node>
  <node pkg="jsk_teleop_joy" type="joy.py" name="joy" output="screen"
        clear_params="true">
    <param name="controller_type" value="$(arg CONTROLLER_TYPE)" />
    <rosparam subst_value="true">
      plugins:
        'CylinderPublisher':
          class: 'JoyMarkerPublisher'
          args:
            type: 3
            lock_xy: True
            publish_pose: True
            pose: $(arg POSE_REMAP)
            name: "joy_marker"
            namespace: "cylinder"
            frame_id: $(arg FRAME_ID)
            follow_view: true
            triangle_cmd: "TRIANGLE"
            circle_cmd: "CIRCLE"
            cross_cmd: "CROSS"
            set_marker: "set_marker"
        'CubePublisher':
          class: 'JoyMarkerPublisher'
          args:
            type: 1
            publish_pose: True
            pose: $(arg POSE_REMAP)
            name: "joy_marker"
            namespace: "cube"
            frame_id: $(arg FRAME_ID)
            follow_view: true
    </rosparam>
  </node>

  <group if="$(arg gui)">
    <node name="rviz"
          pkg="rviz" type="rviz"
          args="-d $(find jsk_teleop_joy)/launch/config/sample_marker_publisher.rviz">
    </node>
  </group>

</launch>
